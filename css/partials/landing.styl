// Typography

.landing-main
  h1
    color #484848

// Navbar

.landing-nav
  transition 0.15s linear
  background-color transparent
  border-bottom 1px solid rgba(255 255 255 0.25)
  color white
  &.inverse
    filter invert(100%)
    background-color rgba(0 0 0 0.9)
    border-bottom 1px solid rgba(0 0 0 0.25)

// Hero Section

.hero
  position relative
  overflow hidden
  height 100vh
  color white
  font-size 19px
  a
    color white

.hero-media *
  position absolute
  top 0
  left 0
  min-width 100%
  min-height 100%

.hero-media-overlay
  z-index -100
  background-color rgba(0 0 0 0.5)
  background-image url("../img/hero-grid.png")

.hero-media-fallback
  z-index -300
  background-position center top
  background-size cover
  background-image url("../img/hero-fallback.jpg")

.hero-media-video
  z-index -200
  top 50%
  left 50%
  transform translate(-50%, -50%)

.hero-content
  height 100%
  max-width 600px
  padding 15px
  margin auto
  display flex
  flex-flow column
  justify-content center
  align-items center
  > *
    margin-top 0
    margin-bottom 15px

.hero-content-brand
  width 260px
  max-width 100%
  height auto

.btn-hero
  max-width 300px
  padding-left 50px
  padding-right 50px
  font-size 18px

.hero-learn-more
  position absolute
  bottom 50px
  left 50%
  margin-left -25px
  min-width 50px

// Sections

.landing-main
  section
    text-align center
    overflow hidden
    &:last-child
      padding-bottom 70px
    &:not(.hero)
      padding-top 30px
      &:nth-child(even)
        background white
      &:nth-child(odd)
        background #f0f0f0

.section-content
  max-width 830px
  padding 0 15px
  margin auto

.section-description
  color #707070
  font-size 20px
  margin 30px 0

// Ready section

.ready-buttons
  display flex
  justify-content center
  margin 30px -5px 0 -5px
  & > *
    margin 5px
  @media screen and (max-width: 500px)
    flex-flow column
