.global-footer
  z-index -1000
  position fixed
  bottom 0
  width 100%
  height 80px
  background-color #4B5360

.footer-content
  make-container()
  display flex
  align-items center
  justify-content space-between
  height 100%

.footer-links
  color #9aa4b4
  font-size 14px
  & > li
    display inline-block
    &:nth-child(n+1)
      margin-left 10px
    & > a
      color #cfd6e2

.footer-img
  flex-basis 30px
  width 30px
  height auto
