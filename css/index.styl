// Variables
gray = #e6e6e6

// General

body
  background-color gray
  font-family "Open Sans", sans-serif
  font-size 16px

a
  transition 0.2s ease-in
  text-decoration none
  &:hover
    opacity 0.6

for num in (1..6)
  h{num}
    font-family "klavika", Helvetica, Arial, sans-serif

.btn
  border-radius 4px
  border 1px solid
  font-size 14px

.container
  width 1140px
  margin-left auto
  margin-right auto
  padding-left 15px
  padding-right 15px

main.landing
  section
    padding-top 30px
    text-align center
    &:nth-child(even)
      background white

// Navbar

nav.top-nav
  position fixed
  left 0
  right 0
  top 0
  z-index 1000
  height 80px

nav.landing-nav
  background-color transparent
  border-bottom 1px solid rgba(255 255 255 0.25)
  color white

.nav-content
  height 100%
  display flex
  justify-content space-between
  padding auto 0 auto 0

ul
  margin 0
  padding 0
  list-style none

ul.nav > li
  display inline-block
  & > a
    display inline-block
    color white
    padding 10px 20px
    line-height 20px

for area in left center right
  .nav-{area}
    flex 1
    display flex
    align-items center

.nav-left
  justify-content flex-start
  ul.nav > li
    margin-right 15px
.nav-center
  justify-content center
  ul.nav > li
    margin 7px
.nav-right
  justify-content flex-end
  ul.nav > li
    margin-left 15px

img.nav-logo
  height 50px
  width auto

// Hero Section

section.hero
  position relative
  overflow hidden
  height 100vh

.hero-media *
  position absolute
  top 0
  left 0
  min-width 100%
  min-height 100%

.hero-media-overlay
  z-index -100
  background-color rgba(0 0 0 0.5)
  background-image url("../img/hero-grid.png")

.hero-media-fallback
  z-index -300
  background-position center top
  background-size cover
  background-image url("../img/hero-fallback.jpg")

.hero-media-video
  z-index -200

// About section

section.about
  background white
